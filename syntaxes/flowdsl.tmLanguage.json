{
  "scopeName": "source.flowdsl",
  "patterns": [
    {
      "match": "^\\s*#.*$",
      "name": "comment.line.number-sign"
    },
    {
      "match": "^\\s*([a-zA-Z0-9_]+):",
      "captures": { "1": { "name": "entity.name.function" } }
    },
    {
      "begin": "->",
      "beginCaptures": { "0": { "name": "keyword.operator" } },
      "end": "$",
      "patterns": [
        { "match": "[a-zA-Z0-9_]+", "name": "variable.other" },
        { "match": ",", "name": "punctuation.separator.comma" }
      ]
    },
    { "match": "\\b[A-Z][a-zA-Z0-9_]*\\b", "name": "support.class" },
    { "match": "\\b[a-z][a-zA-Z0-9_]*\\b(?=\\s*=)", "name": "variable.parameter" },
    { "match": "\\b\\d+\\b", "name": "constant.numeric" },
    { "match": "\\b(true|false|null)\\b", "name": "constant.language" },
    { "match": "\"([^\"\\\\]|\\\\.)*\"", "name": "string.quoted.double" },
    { "match": "'([^'\\\\]|\\\\.)*'", "name": "string.quoted.single" },
    {
      "begin": "\"\"\"",
      "beginCaptures": { "0": { "name": "punctuation.definition.string.begin" } },
      "end": "\"\"\"",
      "endCaptures": { "0": { "name": "punctuation.definition.string.end" } },
      "name": "string.quoted.double.block",
      "patterns": [ { "match": "\\\\.", "name": "constant.character.escape" } ]
    },
    {
      "begin": "'''",
      "beginCaptures": { "0": { "name": "punctuation.definition.string.begin" } },
      "end": "'''",
      "endCaptures": { "0": { "name": "punctuation.definition.string.end" } },
      "name": "string.quoted.single.block",
      "patterns": [ { "match": "\\\\.", "name": "constant.character.escape" } ]
    },
    { "match": "=", "name": "keyword.operator.assignment" },
    { "match": "[()]", "name": "punctuation.section.group" },
    { "match": ",", "name": "punctuation.separator.comma" }
  ]
}
